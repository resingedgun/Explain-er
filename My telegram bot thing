from config import token
import telebot

bot = telebot.TeleBot(token)


# Handle '/start' and '/help'
@bot.message_handler(commands=['help', 'start'])
def send_welcome(message):
    bot.reply_to(message, """\
Hi there, I am Student_IvanBot.
I am here to echo your kind words back to you. Just say anything nice and I'll say the exact same thing to you!\
""")


# Handle all other messages with content_type 'text' (content_types defaults to ['text'])
@bot.message_handler(func=lambda message: True)
def echo_message(message):
    bot.reply_to(message, message.text)

@bot.message_handler(command=['help'])
def send_welcome(message):
    bot.reply_to(message, '''\Hello! I can react to your messages. Just repeat them like a parrot :)''')
    
@bot.message_handler(content_types=['photo'])
def send_foto(message):
    bot.reply_to(message, 'Not gonna lie, cool photo!')

bot.infinity_polling()

